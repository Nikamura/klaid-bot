{
  "name": "klaid-bot",
  "type": "module",
  "version": "1.0.1",
  "license": "MIT",
  "scripts": {
    "build": "tsc --noEmit && shx rm -rf dist && ncc build --out dist --source-map src/index.ts",
    "format": "biome format src/ --write && biome check src/ --apply-unsafe",
    "lint": "biome check src/ && biome format src/",
    "preinstall": "npx only-allow yarn",
    "start": "tsx watch -r dotenv/config src/index.ts"
  },
  "dependencies": {
    "convict": "6.2.4",
    "get-urls": "12.1.0",
    "grammy": "1.18.1",
    "winston": "3.12.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.2",
    "@tsconfig/node18": "18.2.2",
    "@tsconfig/strictest": "2.0.3",
    "@types/convict": "6.1.6",
    "@types/node": "18.19.26",
    "@vercel/ncc": "0.38.1",
    "dotenv": "16.4.5",
    "shx": "0.3.4",
    "tsx": "3.14.0",
    "typescript": "5.4.3"
  }
}
